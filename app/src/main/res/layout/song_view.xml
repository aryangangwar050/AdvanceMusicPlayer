<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_marginVertical="3dp">

    <ImageView
        android:id="@+id/svImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon_song_default"

        />

    <TextView
        android:id="@+id/songTitle"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_toStartOf="@+id/songDuration"
        android:layout_toLeftOf="@+id/songDuration"
        android:layout_toEndOf="@+id/svImage"
        android:layout_toRightOf="@+id/svImage"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:paddingBottom="2dp"
        android:singleLine="true"
        android:text="Song title"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/songDuration"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:paddingLeft="10dp"
        android:layout_marginVertical="15dp"
        android:text="00:00"
        android:textColor="@color/black" />
    <TextView
        android:id="@+id/songAlbum"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Song title"
        android:textSize="14sp"
        android:paddingLeft="5dp"
        android:layout_toStartOf="@+id/songDuration"
        android:textColor="@color/black"
        android:layout_toEndOf="@+id/svImage"
        android:layout_toRightOf="@+id/svImage"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/songDuration"
        android:layout_marginTop="30dp"/>


</RelativeLayout>